{
  "name": "sic-code-finder-prototype",
  "version": "1.0.0",
  "description": "A starter web application",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development ts-node ./src/server.ts",
    "dev": "NODE_ENV=development nodemon",
    "build": "NODE_ENV=production tsc",
    "postbuild": "copyfiles -f -V src/views/* dist/app/views",
    "lint": "tslint -p .",
    "test": "jest -c src/test/jest.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "govuk-frontend": "^3.6.0",
    "mongoose": "^6.1.5",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.16",
    "@types/node": "^13.13.2",
    "@types/nunjucks": "^3.2.2",
    "@types/supertest": "^2.0.8",
    "copyfiles": "^2.2.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.1.0",
    "jest": "^25.4.0",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.7",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts,njk",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  }
}
